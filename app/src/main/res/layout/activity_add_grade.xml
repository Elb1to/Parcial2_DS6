    <TextView
        android:id="@+id/add_grades_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textAlignment="center"
        android:textSize="28sp" />

    <Button
        android:id="@+id/add_grades_save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_grades_title"
        android:text="GUARDAR NOTAS" />

    <GridView
        android:id="@+id/add_grades_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_grades_save_button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:verticalSpacing="15dp" />

</RelativeLayout>